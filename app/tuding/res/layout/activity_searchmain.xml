<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_title">
        <ImageView 
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/selector_bg_gray"
	        android:layout_centerVertical="true"
	        android:paddingBottom="12dp"
	        android:paddingLeft="16dp"
	        android:paddingRight="20dp"
	        android:paddingTop="12dp"
	        android:src="@drawable/icon_back"/>
        <RadioGroup
            android:id="@+id/radiogroup"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_centerInParent="true"
	        android:layout_marginTop="8dp"
	        android:layout_marginBottom="8dp"
	        android:background="@drawable/bg_kuang_rc"
	        android:padding="1dp">
	        <RadioButton 
	            android:id="@+id/radio1"
	            android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:button="@null"
	        	android:background="@drawable/selector_white_transparent"
	        	android:textSize="20sp"
	        	android:checked="true"
	        	android:paddingLeft="23dp"
	        	android:paddingRight="23dp"
	        	android:paddingTop="4dp"
	        	android:paddingBottom="4dp"
	        	android:textColor="@drawable/selector_blue_white"
	        	android:text="附近"/>
	        <RadioButton 
	            android:id="@+id/radio2"
	            android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:button="@null"
	        	android:background="@drawable/selector_white_transparent"
	        	android:textSize="20sp"
	        	android:paddingLeft="23dp"
	        	android:paddingRight="23dp"
	        	android:paddingTop="4dp"
	        	android:paddingBottom="4dp"
	        	android:textColor="@drawable/selector_blue_white"
	        	android:text="最热"/>
	        <RadioButton 
	            android:id="@+id/radio3"
	            android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:button="@null"
	        	android:background="@drawable/selector_white_transparent"
	        	android:textSize="20sp"
	        	android:paddingLeft="23dp"
	        	android:paddingRight="23dp"
	        	android:paddingTop="4dp"
	        	android:paddingBottom="4dp"
	        	android:textColor="@drawable/selector_blue_white"
	        	android:text="最新"/>
	    </RadioGroup>
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/layout_tabcontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />

</LinearLayout>
