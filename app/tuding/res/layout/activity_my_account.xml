<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <include layout="@layout/template_nav_title" />
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >
        
        <View android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/black"/>
        
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp" >
            
            <TextView android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/blue_msg"
                android:textSize="18sp"
                android:text="账户余额"/>

            <TextView android:id="@+id/yue_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textSize="18sp"
                android:textColor="@color/gray_97"
                android:text="￥ 0.00"/>
        </LinearLayout>
        
        <View android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/black"/>
        
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp" >
            
            <TextView android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/blue_msg"
                android:textSize="18sp"
                android:text="累计收入"/>

            <TextView android:id="@+id/income_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textSize="18sp"
                android:textColor="@color/gray_97"
                android:text="￥ 0.00"/>
        </LinearLayout>
        
        <View android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/black"/>
        
        <LinearLayout android:id="@+id/identify_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp" >
            
            <TextView android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/blue_msg"
                android:textSize="18sp"
                android:text="身份认证"/>

            <TextView android:id="@+id/identify_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textSize="18sp"
                android:textColor="@color/gray_97"
                android:text="未认证"/>
        </LinearLayout>
        
        <View android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/black"/>
        
        <Button
            android:id="@+id/view_account_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/blue_button"
            android:text="查看账单"
            android:textSize="18sp" />

        <Button
            android:id="@+id/cash_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/blue_button"
            android:text="我要提醒"
            android:textSize="18sp" />

    </LinearLayout>
    
</LinearLayout>