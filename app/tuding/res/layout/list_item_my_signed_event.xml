<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
	    android:paddingEnd="10dp"
	    android:paddingLeft="20dp"
	    android:paddingRight="10dp"
	    android:paddingStart="20dp"
	    android:paddingTop="12dp" >
    
	    <ImageView
	        android:id="@+id/event_sender_head"
	        android:layout_width="50dp"
	        android:layout_height="50dp"
	        android:background="@drawable/bg_head"
	        android:contentDescription="@string/empty"
	        android:src="@drawable/icon_head" />
	
	    <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        android:paddingEnd="10dp"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:paddingStart="10dp" >
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" >
	
	            <TextView
	                android:id="@+id/event_sender_name"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="深圳吃货"
	                android:textColor="@color/gray_97"
	                android:textSize="12sp" />
	            
	            <TextView android:layout_width="0dp"
	                android:layout_weight="1"
	                android:layout_height="wrap_content"/>
	
	            <TextView
	                android:layout_marginRight="15px"
	                android:id="@+id/event_type"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="运动/户外"
	                android:textColor="@color/gray_97"
	                android:textSize="12sp" />
	        </LinearLayout>
	
	        <TextView
	            android:id="@+id/event_title"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:paddingTop="3dp"
	            android:text="珠三角相亲大会"
	            android:textColor="@color/blue_msg"
	            android:textSize="16sp" />
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="3dp" >
	
	            <ImageView
	                android:layout_width="15dp"
	                android:layout_height="15dp"
	                android:contentDescription="@string/empty"
	                android:src="@drawable/black_heart" />
	
	            <TextView
	                android:id="@+id/event_start_time"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="5dp"
	                android:text="11月11日   14点30分"
	                android:textColor="@color/gray_97"
	                android:textSize="12sp" />
	
	        </LinearLayout>
	        
	    </LinearLayout>
	
	    <TextView
	        android:id="@+id/event_status"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:text="进行中"
	        android:textColor="@color/green_event"
	        android:textSize="16sp" />
    </LinearLayout>
	    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_my_event_separater"
        android:visibility="visible" />
    
</LinearLayout>