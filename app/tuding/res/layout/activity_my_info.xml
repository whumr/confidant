<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <include layout="@layout/template_nav_title" />
    
    <LinearLayout android:id="@+id/my_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:paddingRight="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical" >
        
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:text="头像"
            android:textColor="@color/gray_67"
            android:textSize="12sp"/>
        
        <TextView  
	        android:layout_width="0dp"  
	        android:layout_height="wrap_content"  
	        android:layout_weight="1" /> 
	        
        <ImageView android:id="@+id/my_head_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_head"
            android:contentDescription="@string/empty" />
        
        <ImageView android:layout_width="20dp"
            android:layout_height="20dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:contentDescription="@string/empty"
            android:src="@drawable/icon_setting_forward" />

    </LinearLayout>
    
    <ImageView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:paddingRight="20dp"
        android:paddingEnd="20dp"
        android:src="@drawable/line_setting"/>
    
    <LinearLayout android:id="@+id/my_nick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:paddingRight="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical" >
        
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:text="昵称"
            android:textColor="@color/gray_67"
            android:textSize="12sp"/>
        
        <TextView  
	        android:layout_width="0dp"  
	        android:layout_height="wrap_content"  
	        android:layout_weight="1" /> 
	        
        <TextView android:id="@+id/my_nick_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_b9"
            android:text=""/>
        
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:contentDescription="@string/empty"
            android:src="@drawable/icon_setting_forward" />

    </LinearLayout>
    
    <ImageView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:paddingRight="20dp"
        android:paddingEnd="20dp"
        android:src="@drawable/line_setting"/>
    
    <LinearLayout android:id="@+id/my_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:paddingRight="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical" >
        
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:text="性别"
            android:textColor="@color/gray_67"
            android:textSize="12sp"/>
        
        <TextView  
	        android:layout_width="0dp"  
	        android:layout_height="wrap_content"  
	        android:layout_weight="1" /> 
	        
        <TextView android:id="@+id/my_sex_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_b9"
            android:text=""/>
        
        <ImageView android:id="@+id/my_sex_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:paddingLeft="3dp"
            android:paddingStart="3dp"
            android:contentDescription="@string/empty"
            android:src="@drawable/icon_male" />
        
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:contentDescription="@string/empty"
            android:src="@drawable/icon_setting_forward" />

    </LinearLayout>
    
    <ImageView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:paddingRight="20dp"
        android:paddingEnd="20dp"
        android:src="@drawable/line_setting"/>
    
    <LinearLayout android:id="@+id/my_mark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:paddingRight="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical" >
        
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:text="个性签名"
            android:textColor="@color/gray_67"
            android:textSize="12sp"/>
        
        <TextView  
	        android:layout_width="0dp"  
	        android:layout_height="wrap_content"  
	        android:layout_weight="1" /> 
	        
        <TextView android:id="@+id/my_mark_txt"
            android:layout_width="wrap_content"
            android:maxWidth="220dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/gray_b9"
            android:text=""/>
        
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:contentDescription="@string/empty"
            android:src="@drawable/icon_setting_forward" />

    </LinearLayout>
    
    <ImageView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:paddingRight="20dp"
        android:paddingEnd="20dp"
        android:src="@drawable/line_setting"/>
    
    <LinearLayout android:id="@+id/my_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:paddingRight="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical" >
        
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:text="所在地"
            android:textColor="@color/gray_67"
            android:textSize="12sp"/>
        
        <TextView  
	        android:layout_width="0dp"  
	        android:layout_height="wrap_content"  
	        android:layout_weight="1" /> 
	        
        <TextView android:id="@+id/my_place_txt"
            android:layout_width="wrap_content"
            android:maxWidth="220dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/gray_b9"
            android:text=""/>
        
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:contentDescription="@string/empty"
            android:src="@drawable/icon_setting_forward" />

    </LinearLayout>
    
    <ImageView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:src="@drawable/icon_my_event_separater"/>
    
    <LinearLayout android:id="@+id/my_reset_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:paddingRight="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical" >
        
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:text="密码"
            android:textColor="@color/gray_67"
            android:textSize="12sp"/>
        
        <TextView  
	        android:layout_width="0dp"  
	        android:layout_height="wrap_content"  
	        android:layout_weight="1" /> 
	        
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:contentDescription="@string/empty"
            android:src="@drawable/icon_setting_forward" />

    </LinearLayout>
    
    <ImageView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:paddingRight="20dp"
        android:paddingEnd="20dp"
        android:src="@drawable/line_setting"/>
    
</LinearLayout>