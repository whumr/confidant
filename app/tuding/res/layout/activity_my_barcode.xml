<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <include layout="@layout/template_nav_title" />
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" >
        
        <com.fingertip.tuding.my.widget.RoundImageView android:id="@+id/my_head_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_head"
            android:contentDescription="@string/empty" />
        
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            
            <TextView android:id="@+id/my_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_msg"
                android:textSize="24sp"
                android:text="范冰冰"/>

            <TextView android:id="@+id/my_place_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/gray_97"
                android:text="广东  广州"/>
        </LinearLayout>
    </LinearLayout>
    
    <ImageView android:id="@+id/my_barcode_img"
        android:contentDescription="@string/empty"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:background="@drawable/barcode_border" />
    
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/gray_97"
        android:textSize="18sp"
        android:text="扫一扫二维码，加我！！"/>
    
</LinearLayout>