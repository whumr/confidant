<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@drawable/bg_my_index"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/my_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingEnd="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingStart="20dp"
        android:paddingTop="15dp" >

        <ImageView
            android:id="@+id/my_head_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_head"
            android:contentDescription="@string/empty"
            android:src="@drawable/icon_head" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingStart="20dp" >

            <TextView
                android:id="@+id/my_nick_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:singleLine="false"
                android:maxEms="7"
                android:textColor="@color/black_39"
                android:textSize="@dimen/my_nick_txtSize" />

            <TextView
                android:id="@+id/my_place_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/gray_b5"
                android:textSize="@dimen/my_place_txtSize" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:contentDescription="@string/empty"
            android:src="@drawable/icon_setting_forward" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_pub_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingStart="40dp"
        android:paddingTop="20dp" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/empty"
            android:src="@drawable/icon_my_pub_event" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="28dp"
            android:paddingStart="20dp"
            android:text="发布活动"
            android:textColor="@color/black_42"
            android:textSize="@dimen/pub_eventTextSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingStart="40dp"
        android:paddingTop="10dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/re_iv_my_evetn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/empty"
                android:src="@drawable/icon_my_event" />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/re_tv_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/re_iv_my_evetn"
                android:paddingLeft="28dp"
                android:paddingStart="20dp"
                android:text="我的活动"
                android:textColor="@color/black_42"
                android:textSize="@dimen/pub_eventTextSize" />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/re_tv_mysay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24sp"
                android:text="" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_msg_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingStart="40dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/msg_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/empty"
            android:src="@drawable/icon_my_msg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="28dp"
            android:paddingStart="20dp"
            android:text="消息中心"
            android:textColor="@color/black_42"
            android:textSize="@dimen/pub_eventTextSize" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_my_separater" />

    <LinearLayout
        android:id="@+id/my_watch_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingStart="40dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/watch_area_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/empty"
            android:src="@drawable/icon_my_watch_area" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="28dp"
            android:paddingStart="20dp"
            android:text="关注圈"
            android:textColor="@color/black_42"
            android:textSize="@dimen/pub_eventTextSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_watch_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingStart="40dp"
        android:paddingTop="10dp" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/empty"
            android:src="@drawable/icon_my_watch_list" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="28dp"
            android:paddingStart="20dp"
            android:text="关注列表"
            android:textColor="@color/black_42"
            android:textSize="@dimen/pub_eventTextSize" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_my_separater" />

    <LinearLayout
        android:id="@+id/my_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingStart="40dp"
        android:paddingTop="10dp" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/empty"
            android:src="@drawable/icon_my_setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="28dp"
            android:paddingStart="20dp"
            android:text="设置"
            android:textColor="@color/black_42"
            android:textSize="@dimen/pub_eventTextSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingStart="40dp"
        android:paddingTop="10dp" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/empty"
            android:src="@drawable/icon_my_setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="28dp"
            android:paddingStart="20dp"
            android:text="我的账户"
            android:textColor="@color/black_42"
            android:textSize="@dimen/pub_eventTextSize" />
    </LinearLayout>

