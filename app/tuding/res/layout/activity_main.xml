<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" />
	
    <ImageView
        android:id="@+id/iv_icon_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_main_info_black"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp" />
    
    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_main_search_black"
        android:layout_gravity="right"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />
    
     <ImageView
        android:id="@+id/iv_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginBottom="64dp"
        android:layout_gravity="bottom"
        android:src="@drawable/icon_position"/>
     
     <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="64dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_gravity="bottom|right"
        android:background="@drawable/bg_zoom_addplus">
        <ImageView 
            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:layout_weight="1"
       		android:paddingLeft="12dp"
       		android:paddingRight="12dp"
       		android:src="@drawable/icon_add"/>
        <ImageView 
            android:id="@+id/iv_plus"
            android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:layout_weight="1"
       		android:paddingLeft="12dp"
       		android:paddingRight="12dp"
       		android:src="@drawable/icon_plus"/>
     </LinearLayout>
     
     <com.fingertip.tuding.common.ScrollTouchView 
         android:id="@+id/view_tab"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="bottom|center_horizontal"
         android:background="@color/white"
         android:paddingTop="4dp"
         android:paddingBottom="4dp"/>
     
</FrameLayout>