<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include 
        android:id="@+id/view_title"
        layout="@layout/view_title"/>
    
    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layout_below="@+id/view_title" />
    
    <TextView 
        android:id="@+id/tv_marker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black_43"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:gravity="center"
        android:layout_below="@+id/view_title"
        android:background="@drawable/bg_marker_search" />
	
     <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="2dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_marker"
        android:background="@color/black_33"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:text="请点击地图选择位置"/>
    
    <TextView 
        android:id="@+id/tv_config"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="14dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_event"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="确定"/>
    
   
</RelativeLayout>
