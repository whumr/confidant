<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_f6"
    android:orientation="vertical" >

    <include
        android:id="@+id/view_title"
        layout="@layout/view_title" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    
                    android:id="@+id/et_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_kuang_rc"
                    android:hint="活动主题"
                    android:paddingBottom="8dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="8dp"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/et_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_kuang_rc"
                    android:paddingBottom="8dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="8dp"
                    android:singleLine="false"
                    android:text="活动介绍:\n活动地点:\n活动时间:\n报名方式:\n活动费用:\n提示:\n\n"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_type_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:background="@color/gray_e5"
                android:drawableRight="@drawable/icon_arrow_down"
                android:gravity="center_vertical"
                android:paddingBottom="6dp"
                android:paddingLeft="12dp"
                android:paddingRight="16dp"
                android:paddingTop="6dp"
                android:textColor="@color/black"
                android:hint="活动类型"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/layout_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="31px"
                android:layout_marginLeft="43px"
                android:layout_marginRight="43px"
                android:layout_marginTop="30px"
                android:orientation="vertical"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_special"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/selector_bg_gray"
                        android:drawableLeft="@drawable/icon_classify_11"
                        android:gravity="center"
                        android:minHeight="45dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="优惠/特价"
                        android:textColor="#2E3246"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray_d7" />

                    <TextView
                        android:id="@+id/tv_perform"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/selector_bg_gray"
                        android:drawableLeft="@drawable/icon_event_type_show"
                        android:gravity="center"
                        android:minHeight="45dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="娱乐/表演"
                        android:textColor="#2E3246"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray_d7" />

                    <TextView
                        android:id="@+id/tv_sociality"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/selector_bg_gray"
                        android:drawableLeft="@drawable/icon_to"
                        android:gravity="center"
                        android:minHeight="45dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="社交/聚会"
                        android:textColor="#2E3246"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_d7" />

                <LinearLayout
                    
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tv_sports"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/selector_bg_gray"
                        android:drawableLeft="@drawable/icon_event_type_sports"
                        android:gravity="center"
                        android:minHeight="45dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="运动/户外"
                        android:textColor="#2E3246"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray_d7" />

                    <TextView
                        android:id="@+id/tv_study"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/selector_bg_gray"
                        android:drawableLeft="@drawable/icon_event_type_study"
                        android:gravity="center"
                        android:minHeight="45dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="学习/沙龙"
                        android:textColor="#2E3246"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray_d7" />

                    <TextView
                        android:id="@+id/tv_other"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/selector_bg_gray"
                        android:drawableLeft="@drawable/icon_event_type_others"
                        android:gravity="center"
                        android:minHeight="45dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="其它"
                        android:textColor="#2E3246"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_img_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:background="@color/gray_e5"
                android:drawableRight="@drawable/icon_arrow_down"
                android:gravity="center_vertical"
                android:hint="活动图片上传"
                android:paddingBottom="6dp"
                android:paddingLeft="12dp"
                android:paddingRight="16dp"
                android:paddingTop="6dp"
                android:textColor="@color/black" />

            <com.fingertip.tuding.widget.view.GridViewForScroll
                android:id="@+id/img_gridView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/bottom_layout"
                android:cacheColorHint="@android:color/transparent"
                android:clipChildren="true"
                android:gravity="center"
                android:horizontalSpacing="3dp"
                android:listSelector="@android:color/transparent"
                android:numColumns="5"
                android:padding="10dp"
                android:stretchMode="columnWidth"
                android:verticalSpacing="3dp" >
            </com.fingertip.tuding.widget.view.GridViewForScroll>
            
            <!-- 
            <LinearLayout
                android:id="@+id/layout_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:paddingLeft="31px"
                android:paddingRight="8dp" >
            </LinearLayout>
             -->

            <TextView
                android:id="@+id/tv_time_hint"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:background="@color/gray_e5"
                android:drawableRight="@drawable/icon_arrow_down"
                android:gravity="center_vertical"
                android:hint="活动截止时间"
                android:paddingBottom="6dp"
                android:paddingLeft="12dp"
                android:paddingRight="16dp"
                android:paddingTop="6dp"
                android:textColor="@color/black" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/layout_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp" >

                <!-- 布局添加一个滑轮视图 -->

                <com.fingertip.tuding.common.wheelview.WheelView
                    android:id="@+id/fast_year"
                    android:layout_width="0dip"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0" />

                <com.fingertip.tuding.common.wheelview.WheelView
                    android:id="@+id/fast_month"
                    android:layout_width="0dip"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0" />

                <com.fingertip.tuding.common.wheelview.WheelView
                    android:id="@+id/fast_day"
                    android:layout_width="0dip"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0" />

                <com.fingertip.tuding.common.wheelview.WheelView
                    android:id="@+id/fast_hours"
                    android:layout_width="0dip"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0" />

                <com.fingertip.tuding.common.wheelview.WheelView
                    android:id="@+id/fast_mintue"
                    android:layout_width="0dip"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0" />
            </LinearLayout>

                <!-- 
            <LinearLayout
                android:id="@+id/layout_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:background="@color/gray_e5"
                android:paddingBottom="6dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="6dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="标记活动位置 "
                    android:textColor="@color/black" />
                 -->
                
                <TextView
                    android:id="@+id/tv_position"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginBottom="6dp"
	                android:layout_marginTop="6dp"
	                android:background="@color/gray_e5"
	                android:drawableRight="@drawable/icon_arrow_down"
	                android:gravity="center_vertical"
	                android:hint="标记活动位置"
	                android:paddingBottom="6dp"
	                android:paddingLeft="12dp"
	                android:paddingRight="16dp"
	                android:paddingTop="6dp"
	                android:textColor="@color/black" />

				<!-- 
                <TextView
                    android:id="@+id/tv_position"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="未知 "
                    android:singleLine="true" />
                <ImageView
                    android:id="@+id/iv_position_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/icon_arrow_down" />
            </LinearLayout>
				 -->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_d7" />

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="36dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_btn_publish_blue"
                android:gravity="center"
                android:text="立即发布"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>