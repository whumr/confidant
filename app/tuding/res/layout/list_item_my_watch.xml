<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   >
	
    <LinearLayout 
       android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="20dp"
    android:paddingStart="20dp"
    android:paddingRight="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp" >
	<LinearLayout android:id="@+id/v_delete_check"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:visibility="gone">
        
	    <ImageView android:id="@+id/iv_delete_check"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:src="@drawable/icon_unchecked"/>
    </LinearLayout>
    
    <com.fingertip.tuding.my.widget.RoundImageView android:id="@+id/my_watcher_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_head"
        android:background="@drawable/bg_head"
        android:contentDescription="@string/empty" />
    
    <LinearLayout android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">
        
        <TextView android:id="@+id/my_watcher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_97"
            android:textSize="12sp"
            android:text="深圳吃货"/>
        
        <TextView android:id="@+id/my_watcher_mark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:textColor="@color/blue_msg"
            android:textSize="15sp"
            android:text="每个吃货都是折翼的天使"/>
    </LinearLayout>
    
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView android:id="@+id/my_watcher_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/gray_97"
            android:textSize="10sp"
            android:text="广东省广州市"/>
        
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom">
            
            <TextView android:id="@+id/my_watcher_up_count"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="end"
	            android:textColor="@color/gray_97"
	            android:textSize="10sp"
	            android:text="8888"/>
            
            <TextView android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingLeft="5dp"
	            android:gravity="end"
	            android:textColor="@color/gray_97"
	            android:textSize="10sp"
	            android:text="人关注"/>
        </LinearLayout>
        
    </LinearLayout>
    
    <!-- 
    <TextView android:id="@+id/tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:textSize="15sp"
        android:textColor="@color/red_event"
        android:visibility="gone"
        android:text="删除"/>
     -->
     </LinearLayout>
     <ImageView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:src="@drawable/icon_my_event_separater"/>
     
     <ImageView
        android:id="@+id/hidden_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
</LinearLayout>
